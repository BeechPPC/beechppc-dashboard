# Google Ads API
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token
GOOGLE_ADS_CLIENT_ID=your_client_id
GOOGLE_ADS_CLIENT_SECRET=your_client_secret
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your_mcc_id

# Anthropic API (for AI-powered keyword analysis)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email
EMAIL_PASSWORD=your_app_password
EMAIL_TO=recipient_email

# Redis - Required for alert storage
# Get this from Vercel dashboard: Storage > Redis Database > .env.local tab
# Variable name will match your database name (e.g., Alerts_REDIS_URL)
Alerts_REDIS_URL=redis://default:your_password@your-redis-host:port

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
